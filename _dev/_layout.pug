//- サイト共通
- var DOMAIN = 'ENTER_DOMAIN'
- var SITE_NAME = 'ENTER_SITENAME'

//- デフォルト値
- var title = ''
- var ogimage = '/images/ogp.jpg'
- var disc = ''
- var url = ''
- var iconpath = ''
- var csspath = '/css/style.css'

- var img = '/images/' //イメージフォルダ用パス
- var context = ''

block variables

doctype html
html(lang="ja")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width")
		meta(name="format-detection" content="telephone=no")
		if title && title != ''
			title=title + ' | ' + SITE_NAME
		else
			title=SITE_NAME
		if disc && disc != ''
			meta(name="description", content=disc)
		meta(property="og:site_name", content=SITE_NAME)
		if title && title != ''
			meta(property="og:title", content=title)
		else
			meta(property="og:title", content=SITE_NAME)
		if ogimage && ogimage != ''
			meta(property="og:image", content=DOMAIN + ogimage)
		if disc && disc != ''
			meta(property="og:description", content=disc)
		meta(property="og:url", content=DOMAIN + url)
		meta(property="og:type", content="website")
		link(rel="apple-touch-icon" sizes="180x180" href=iconpath + '/apple-touch-icon.png')
		link(rel="icon" type="image/png" sizes="32x32" href=iconpath + '/favicon-32x32.png')
		link(rel="icon" type="image/png" sizes="16x16" href=iconpath + '/favicon-16x16.png')
		link(rel="stylesheet" href=csspath)
		block css
	body
		block header
			include /_header.pug
		block content
		block footer
			include /_footer.pug
		script(src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous")
		script(src="/js/main.js")
		block script